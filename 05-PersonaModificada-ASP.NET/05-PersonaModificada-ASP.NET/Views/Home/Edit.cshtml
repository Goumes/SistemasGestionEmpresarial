@{
    Layout = null;
}
@model _05_PersonaModificada_ASP.Models.ViewModels.PersonasDepartamentos

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div> 
        <form method="post" action=""/>
            <p>Nombre</p> 
            <input type="text" name="nombre" value="@Model.nombre"/><br/>
            <p>@Html.ValidationMessageFor(model => model.nombre)</p>
            <p>Apellidos</p> 
            @Html.TextBox("apellidos", Model.apellidos)  
            <p>Direccion</p> 
            @Html.TextBoxFor(model => model.direccion)
            <p>Telefono</p> 
            @Html.TextBoxFor(model => model.telefono)<br /><br />
            <p>Departamentos</p>
            @Html.DropDownListFor(m => m.idDepartamento, new SelectList (Model.listado.departamentos, "idDepartamento", "nombre"))

            @Html.ValidationSummary()

            <!-- El desplegable -->
            
            

            <input type="submit" name="enviar" value="Enviar"/>
        </form>
    </div>
</body>
</html>
